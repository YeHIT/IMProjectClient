<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageMine.AccountActionActivity"
    android:background="@drawable/pic1"
    android:orientation="vertical">

    <include layout="@layout/mine_title_bar" />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_user_pic_show"
            android:layout_marginLeft="25dp"
            android:background="@drawable/user_pic_b2"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/login_name"
                android:layout_marginLeft="20dp"
                android:textSize="28sp"
                android:text="邓广博"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    android:text="用户名：denwade"
                    android:textColorHint="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/btn_account_action"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/next"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_marginTop="35dp"
        android:background="@color/iron"
        android:layout_width="match_parent"
        android:alpha="0.3"
        android:layout_height="10dp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:alpha="0"
        android:background="#E4E4E4"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:background="#E4E4E4" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/btn_change_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="切换账户"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"

            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/switch_filling" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:background="#E4E4E4" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/btn_exit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="退出登录"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"

            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/exit" />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:background="#E4E4E4"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:background="#E4E4E4"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="290dp"
        android:alpha="0"
        android:background="#E4E4E4"/>


</LinearLayout>