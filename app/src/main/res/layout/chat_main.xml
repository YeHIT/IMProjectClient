            android:src="@drawable/send_message" />


    </LinearLayout>
    <FrameLayout
        android:id="@+id/emojicons"
        android:layout_width="match_parent"
        android:layout_height="1500sp"
        android:layout_weight="4.2"
        android:visibility="gone" />


